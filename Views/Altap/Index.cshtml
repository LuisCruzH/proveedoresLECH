@using proveedoresLECH.Models
@model ProveedoresCLS
@{
    ViewBag.Title = "Alta Proveedor";
}
<style>
    .espacio {
        margin-bottom: 3rem;
    }

    .itemAltura {
        margin-top: 1rem;
    }

    .buttons {
        margin: 0.5rem;
    }
</style>
@using (Html.BeginForm("Agrega", "Altap", FormMethod.Post, new { @class = "espacio", @style = "margin-top:1.5rem;" }))
{
    <div class="row" style="margin-bottom:2rem;">
        <div class="col" style="text-align:center;">
            <h2>
                <i class="fas fa-user-plus"></i>&nbsp;&nbsp;Registro de Proovedor
            </h2>
        </div>
        <div class="card">
            <div class="card-header">
                Datos generales
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="form-group col-12 col-sm-6 col-md-4 ">
                        @Html.LabelFor(p => p.codigo, new { @class = "label-form" })
                        @Html.TextBoxFor(p => p.codigo, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-12 col-sm-6 col-md-4 ">
                        @Html.LabelFor(p => p.razonSocial, new { @class = "label-form" })
                        @Html.TextBoxFor(p => p.razonSocial, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-12 col-sm-6 col-md-4 ">
                        @Html.LabelFor(p => p.rfc, new { @class = "label-form" })
                        @Html.TextBoxFor(p => p.rfc, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="card-footer text-muted">
                <input id="guardarForm" type="submit" class="btn btn-outline-primary buttons" value="Guardar" />
                <input id="cancelarForm" type="button" class="btn btn-outline-danger buttons" value="Salir" onclick="cancelForm()" />
            </div>
        </div>
    </div>
}
<script>
    function cancelForm() {
        alertify.confirm("Alerta",
            'Si continua se perderán todos los datos ingresados.',
            function () {
                alertify.error('Registro Cancelado');
                setTimeout(function () { window.location.href = '/Proveedor' }, 1000);
            },
            function () {
                alertify.success('Continue Editando');
            }).set('movable', false);
    }
</script>